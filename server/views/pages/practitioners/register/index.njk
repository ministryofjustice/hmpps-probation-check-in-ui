{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "../../../partials/errorSummary.njk" import errorSummary %}
{% from "../../../partials/validatedDateInput.njk" import validatedDateInput %}
{% extends "../layout.njk" %}
{% set section = "register" %}

{% set title = "Person's details" %}
{% set pageTitle = title %}

{% block beforeContent %}
  {{
    govukBackLink({
    text: "Back",
    href: "/practitioners/register/check-answers" if cya else "/practitioners/dashboard"
    })
  }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row" {{ "id=registerPoPStartPage" if start }}>
    <div class="govuk-grid-column-two-thirds">
      {{ errorSummary(validationErrors) }}
      <h1 class="govuk-heading-l">{{ title }}</h1>
      <p>We will use these details to verify the person when they access the service.</p>
      <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        <input type="hidden" name="startedAt" value="{{ formData["startedAt"] or startedAtValue }}" />
        {{
          govukInput({
            label: {
              text: "First name",
              classes: "govuk-label--m"
            },
            classes: "govuk-!-width-two-thirds",
            id: "firstName",
            name: "firstName",
            errorMessage: validationErrors | findError("firstName"),
            value: formData["firstName"]
          })
        }}

        {{
          govukInput({
            label: {
              text: "Last name",
              classes: "govuk-label--m"
            },
            classes: "govuk-!-width-two-thirds",
            id: "lastName",
            name: "lastName",
            errorMessage: validationErrors | findError("lastName"),
            value: formData["lastName"]
          })
        }}

        {{
          validatedDateInput({
            id: "dob",
            title: {
              text:  "Date of birth",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            },
            hintText: "For example, 31 3 1980",
            validationErrors: validationErrors,
            day: formData["day"],
            month: formData["month"],
            year: formData["year"]
          })
        }}

        {{
          govukInput({
          label: {
          text: "Case reference number (CRN)",
          classes: "govuk-label--m"
          },
          classes: "govuk-input--width-10 govuk-input--extra-letter-spacing",
          hint: {
          text: "This will be used to link check ins to the person in nDelius"
          },
          id: "crn",
          name: "crn",
          errorMessage: validationErrors | findError("crn"),
          value: formData["crn"]
          })
        }}

        {{
          govukButton({
            text: "Continue"
          })
        }}
      </form>
    </div>
  </div>
{% endblock %}
