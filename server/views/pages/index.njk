{% extends "../partials/layout.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% set content = getContent('home') if getContent else {} %}
{% set pageTitle = content.pageTitle if content.pageTitle else "Probation Check-in Service" %}
{% set mainClasses = "govuk-body" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ content.heading if content.heading else "Probation Check-in Service" }}</h1>

      <p class="govuk-body-l">
        {{ content.intro if content.intro else "This service allows you to check in with your probation officer remotely." }}
      </p>

      <h2 class="govuk-heading-m">{{ content.howToAccess.heading if content.howToAccess else "How to access this service" }}</h2>
      <p class="govuk-body">
        {{ content.howToAccess.body if content.howToAccess else "To use this service, you need a unique link provided by your probation officer. If you have not received a link, please contact your probation officer." }}
      </p>

      {{ govukInsetText({
        text: content.insetText if content.insetText else "If you have received a link to check in, please use that link to access the service."
      }) }}

      <h2 class="govuk-heading-m">{{ content.needHelp.heading if content.needHelp else "Need help?" }}</h2>
      <p class="govuk-body">
        {{ content.needHelp.body if content.needHelp else "If you are having difficulty accessing this service, contact your probation officer for assistance." }}
      </p>
    </div>
  </div>
{% endblock %}
