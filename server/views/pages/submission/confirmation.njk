{% extends "layouts/content.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = t('confirmation.pageTitle') %}
{% set content = getContent('confirmation') %}

{% block contentBody %}
  {{ govukPanel({
    titleText: content.panel.title
  }) }}

  <p class="govuk-body">{{ content.confirmationMessage }}</p>

  <h2 class="govuk-heading-m">{{ content.whatNext.title }}</h2>
  <p class="govuk-body">{{ content.whatNext.body }}</p>
  <p class="govuk-body">{{ content.whatNext.reminder }}</p>

  <p class="govuk-body">
    <a
      href="{{ content.feedback.url }}"
      target="_blank"
      class="govuk-link govuk-link--no-visited-state"
      rel="noopener noreferrer"
    >{{ content.feedback.linkText }}</a>
  </p>
{% endblock %}
